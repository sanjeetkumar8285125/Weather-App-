<script src="js/main.js"></script>
<script>
    /* for day */
    const getCurrentDay=()=>{ 
    let weekday=new Array(7);
    weekday[0]="Sunday";
    weekday[1]="Monday";
    weekday[2]="Tuesday";
    weekday[3]="Wednesday";
    weekday[4]="Thursday";
    weekday[5]="Friday";
    weekday[6]="Saturday";
    let currentDay=new Date();
    days= weekday[currentDay.getDay()] ;
    let day=document.getElementById('day');
    day.innerHTML=days;
    };
    /* For date */
    const getcurrTime=()=>{
    var now=new Date();
    var months=[
        "jan",
        "Feb",
        "Mar",
        "Apr",
        "May",
        "May",
        "June",
        "July",
        "Aug",
        "Sept",
        "Oct",
        "Nov",
        "Dec"
    ];

    var month=months[now.getMonth()+1];
    console.log(month);
    var day=now.getDate();
    var year=now.getFullYear();
        let showdate=document.getElementById('today_date');
    showdate.innerHTML=
    console.log(month+"/"+day+"/"+year);
        
    let Hour=now.getHours();
    let Min=now.getMinutes();

    let periods="AM";
    if(Hour>11)
    {
        periods="PM";
        if(Hour>12)
        Hour-=12;
    }
    if(Min<10){
        Min="0"+Min;
    }
  showdate.innerHTML= ` ${day} ${month} | ${Hour}:${Min} ${periods}`
}
getCurrentDay();
getcurrTime();
</script>
